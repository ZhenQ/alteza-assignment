{% extends 'base_layout.twig' %}

{% block content %}
    <h2 class="text-3xl font-bold">Articles</h2>
    <form method="post" class="border p-2">
        <label class="mb-3">Title<br/> <input class="border" type="text" name="title"/></label><br/>
        <label>Body<br/> <textarea class="border" name="body" cols="50" rows="5"></textarea></label><br/>
        <input type="hidden" name="user_id" value="1">
        <input class="bg-green-500 py-2 px-4 mt-2" type="submit" value="Add Article">
    </form>
{% endblock %}